@model Category
@{
    ViewBag.Title = "New Category";
}

<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Create a New Category</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                @using (Html.BeginForm("New", "Categories", FormMethod.Post, new { role = "form" }))
                {

                    @Html.AntiForgeryToken()

                    <div class="card-body">
                        <div class="form-group">
                            @Html.LabelFor(x => x.CategoryName)
                            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", placeholder = "Category Name" })
                            @Html.ValidationMessageFor(x => x.CategoryName, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>

                }
                <!-- /.card-body -->
            </div>
        </div>
    </div>
</div>